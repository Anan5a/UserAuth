@{
    ViewData["Title"] = "Register new account";
}
@model UserSignupDto


<div class="col-lg-6 col-md-8 col-sm-12 col-xs-12 mx-auto">
    <div class="card">
        <h5 class="card-header text-center text-black">Register new account</h5>
        <div class="card-body">
            @if (ViewBag?.SignupOk != null)
            {
                <div class="container text-center mt-5">
                    <p class="text-black">Your account was created successfully. You can login now.</p>
                        <a asp-action="Login" asp-controller="User" class="text-decoration-underline">Login</a>
                </div>
            }
            else
            {
                <form asp-controller="User" asp-action="Signup" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input type="text" class="form-control" asp-for="Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input type="text" class="form-control" asp-for="Email">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input type="password" class="form-control" asp-for="Password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="col-12 clearfix">
                        <a asp-controller="User" asp-action="Login" class="float-start text-decoration-underline">I already have an account.</a>

                        <button type="submit" class="btn btn-primary float-end">Signup</button>
                    </div>
                </form>
            }
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

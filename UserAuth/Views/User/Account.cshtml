@{
    ViewData["Title"] = "Dashboard";
}
@model AccountViewModel


<h2>Welcome, <b>@Model.Name</b></h2>
<p>Here is your account information</p>

<div class="col-lg-6 col-md-8 col-sm-12 col-xs-12 mx-auto">
   

    <div class="container">
        <form class="py-2 px-4">
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input type="text" class="form-control" asp-for="Name" readonly>
                <span asp-validation-for="Name" class="text-danger"></span>

            </div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input type="email" class="form-control" id="email" asp-for="Email" readonly>
                <span asp-validation-for="Email" class="text-danger"></span>

            </div>
            <div class="mb-3">
                <label for="memberSince" class="form-label">Member since</label>
                <input type="text" class="form-control" id="memberSince" name="memberSince" value="@Model.CreatedAt.ToString("yyyy-MM-dd hh:mm tt")" readonly>
            </div>
            <div class="mb-3">
                <label for="lastModified" class="form-label">Last Modifications</label>
                <input type="text" class="form-control" id="lastModified" name="lastModified" value="@Model.ModifiedAt?.ToString("yyyy-MM-dd hh:mm tt")" readonly>
            </div>
            <!-- Add any other fields or controls as needed -->
        </form>
        <div class="mb-3 float-end pt-1">
            <a asp-action="Update" asp-controller="User" class="btn btn-primary"><i class="fa-solid fa-pen"></i> Edit profile</a>
            <a asp-action="ChangePassword" asp-controller="User" class="btn btn-secondary"><i class="fa-solid fa-lock"></i> Change Password</a>
        </div>
    </div>

</div>
